<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewProfilePage"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonChangeProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChangeProfile"
        android:layout_width="199dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:text="Update profile"
        app:layout_constraintBottom_toTopOf="@+id/buttonChangePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfilePage" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="197dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Change password"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfileChangeGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangeProfile" />

    <Button
        android:id="@+id/buttonProfileChangeGroup"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginBottom="330dp"
        android:text="ChangeGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword" />
</androidx.constraintlayout.widget.ConstraintLayout>